---
import { Button } from "./ui/button";
import MobileMenu from "./MobileMenu";

const navigation = [
  { name: "Home", href: "/" },
  { name: "Services", href: "/services" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "About", href: "/about" },
  { name: "Pricing", href: "/pricing" },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-background/70 border-b border-white/5">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <div class="flex items-center space-x-3">
          <div class="w-9 h-9 border border-white/20 rounded-xl flex items-center justify-center transition-all group-hover:border-primary/50 group-hover:bg-primary/5">
            <span class="text-foreground font-semibold text-xl tracking-tighter">
              S
            </span>
          </div>
          <span class="text-lg font-bold text-foreground tracking-tight">
            Staticfish
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-10">
        {navigation.map((item) => (
          <a
            href={item.href}
            class={`text-[13px] uppercase tracking-widest transition-colors hover:text-primary ${
              currentPath === item.href
                ? "text-primary"
                : "text-muted-foreground"
            }`}
          >
            {item.name}
          </a>
        ))}
      </nav>

      <!-- Mobile menu button -->
      <MobileMenu navigation={navigation} currentPath={currentPath} client:load />
    </div>
  </div>
</header>