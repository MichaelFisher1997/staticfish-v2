---
const navigation = [
  { name: "Home", href: "/" },
  { name: "Services", href: "/services" },
  { name: "Pricing", href: "/pricing" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

const legalLinks = [
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Terms of Service", href: "/terms" },
];
---

<footer class="bg-white/30 backdrop-blur-md border-t border-foreground/5 relative overflow-hidden mt-24">
  <!-- Subtle ambient glow -->
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[500px] h-[200px] bg-gradient-to-t from-primary/10 to-transparent rounded-full blur-[80px] pointer-events-none"></div>

  <div class="container relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8 mb-8">
      
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary/10 to-accent/10 flex items-center justify-center text-primary font-bold shadow-sm">
          S
        </div>
        <span class="text-lg font-bold text-foreground tracking-tight">
          Staticfish
        </span>
      </div>

      <nav class="flex flex-wrap justify-center gap-x-8 gap-y-4">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-[11px] uppercase tracking-[0.2em] text-muted-foreground hover:text-primary transition-colors font-bold"
          >
            {item.name}
          </a>
        ))}
      </nav>

      <div class="text-[11px] text-muted-foreground uppercase tracking-widest font-medium opacity-60">
        Â© 2025 Staticfish
      </div>
    </div>
    
    <!-- Legal Links -->
    <div class="pt-8 border-t border-slate-200 flex flex-col md:flex-row justify-center items-center gap-6">
      <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2">
        {legalLinks.map((item) => (
          <a
            href={item.href}
            class="text-[10px] uppercase tracking-widest text-slate-400 hover:text-primary transition-colors font-bold"
          >
            {item.name}
          </a>
        ))}
      </nav>
      
      <div class="text-[10px] text-slate-400">
        Operated by Michael Fisher in the UK
      </div>
    </div>
  </div>
</footer>
