---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Badge } from '../components/ui/badge';
import { Globe, LayoutTemplate, Wrench, Database, ArrowRight, Clock, Check } from 'lucide-react';

const services = [
  {
    id: "websites",
    title: "Static Websites",
    description: "Fast, secure websites perfect for small businesses that don't need frequent updates.",
    icon: Globe,
    price: "£149 + £50/mo",
    features: [
      "Up to 5 pages included",
      "Custom design for your brand",
      "Mobile-first responsive design",
      "Contact form integration",
      "Basic SEO optimization",
      "Under 1 second load time"
    ],
    timeline: "1-2 weeks",
    tech: ["Astro", "React", "Tailwind CSS", "Cloudflare"]
  },
  {
    id: "cms",
    title: "CMS Websites",
    description: "Easy-to-update websites for businesses that need to manage their own content.",
    icon: LayoutTemplate,
    price: "£249 + £50/mo",
    features: [
      "No page limits",
      "Simple content editor",
      "Blog functionality",
      "2 admin users included",
      "Content scheduling",
      "Hosting & support included"
    ],
    timeline: "2-3 weeks",
    tech: ["Headless CMS", "Astro", "React", "Cloudflare"]
  },
  {
    id: "ecommerce",
    title: "E-Commerce Sites",
    description: "Sell products online with a fast, secure storefront that converts visitors into customers.",
    icon: Database,
    price: "£399 + £50/mo",
    features: [
      "Everything in CMS sites",
      "PayPal & Stripe integration",
      "Unlimited products",
      "Order management dashboard",
      "Multicurrency support",
      "Abandoned cart recovery"
    ],
    timeline: "3-4 weeks",
    tech: ["Stripe", "PayPal", "React", "Database"]
  },
  {
    id: "custom",
    title: "Custom Development",
    description: "Browser extensions, automation tools, or complex web applications. Let's discuss your needs.",
    icon: Wrench,
    price: "Custom Quote",
    features: [
      "Browser extensions",
      "Internal tools & dashboards",
      "API integrations",
      "Automation scripts",
      "AI-powered features",
      "Technical consultation"
    ],
    timeline: "Varies by project",
    tech: ["React", "Python", "Node.js", "PostgreSQL"]
  }
];

const processSteps = [
  {
    step: "01",
    title: "Discovery",
    description: "We discuss your business, goals, and requirements. I'll ask questions to understand exactly what you need.",
    duration: "30-60 min call"
  },
  {
    step: "02",
    title: "Proposal",
    description: "I send you a detailed proposal with scope, timeline, and fixed price. No hidden fees.",
    duration: "1-2 days"
  },
  {
    step: "03",
    title: "Design",
    description: "I create design mockups for your approval. We iterate until you're happy with the look.",
    duration: "3-5 days"
  },
  {
    step: "04",
    title: "Development",
    description: "I build your website with clean, modern code. You'll get progress updates throughout.",
    duration: "1-3 weeks"
  },
  {
    step: "05",
    title: "Launch",
    description: "Final testing, domain setup, and launch. I train you on how to update content (if applicable).",
    duration: "1-2 days"
  }
];
---

<Layout title="Services | Staticfish" description="Web development services for small businesses. Static sites, CMS websites, e-commerce, and custom development.">
  <div class="min-h-screen flex flex-col overflow-x-hidden">
    <Header />
    <main class="flex-1 pt-32">
        
        <!-- Hero -->
        <section class="py-24 relative">
          <div class="absolute top-0 right-0 w-[40vw] h-[40vw] bg-pink-200/30 rounded-full blur-[120px] -z-10"></div>
          
          <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl">
              <span class="text-primary font-bold tracking-widest uppercase text-sm mb-4 block">What I Do</span>
              <h1 class="text-6xl font-black tracking-tighter text-slate-900 sm:text-7xl mb-8 leading-none">
                Services.
              </h1>
              <p class="text-xl text-slate-600 leading-relaxed font-medium">
                Four ways I can help your business succeed online. Each includes hosting, security, and my personal support.
              </p>
            </div>
          </div>
        </section>

        <!-- Services Grid -->
        <section class="py-24">
          <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              
              {services.map((service, index) => (
                <div id={service.id} class="glass-card p-8 md:p-12 relative overflow-hidden group">
                    
                  <div class="absolute top-0 right-0 w-48 h-48 bg-gradient-to-bl from-primary/5 to-transparent rounded-bl-full"></div>
                  
                  <div class="relative z-10">
                    <div class="flex items-start justify-between mb-8">
                      <div>
                        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary to-accent flex items-center justify-center mb-6 text-white shadow-lg">
                          <service.icon className="h-7 w-7" />
                        </div>
                        <h3 class="text-3xl font-bold text-slate-900 mb-2">{service.title}</h3>
                        <div class="text-2xl font-black text-primary">{service.price}</div>
                      </div>
                      
                      <div class="flex items-center gap-2 text-sm text-slate-500 bg-slate-100 px-3 py-1 rounded-full">
                        <Clock className="h-4 w-4" />
                        {service.timeline}
                      </div>
                    </div>

                    <p class="text-slate-600 text-lg mb-8 font-medium">{service.description}</p>
                    
                    <div class="mb-8">
                      <ul class="space-y-3">
                        {service.features.map(feature => (
                          <li class="flex items-start gap-3">
                            <Check className="h-5 w-5 text-primary flex-shrink-0 mt-0.5" />
                            <span class="text-slate-600 font-medium">{feature}</span>
                          </li>
                        ))}
                      </ul>
                    </div>

                    <div class="flex flex-wrap gap-2 mb-8">
                      {service.tech.map(t => (
                        <Badge variant="secondary" className="text-[10px] py-1 px-3 rounded-full uppercase tracking-wider bg-slate-100 text-slate-600 font-bold">{t}</Badge>
                      ))}
                    </div>

                    <Button className="rounded-full h-12 px-8 font-bold">
                      <a href="/contact" class="flex items-center gap-2">
                        Get Started <ArrowRight className="h-4 w-4" />
                      </a>
                    </Button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- Process Section -->
        <section class="py-24 bg-slate-50">
          <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            
            <div class="text-center mb-20">
              <span class="text-primary font-bold tracking-widest uppercase text-sm mb-4 block">How It Works</span>
              <h2 class="text-5xl font-black tracking-tighter text-slate-900 mb-6">My Process.</h2>
              <p class="text-xl text-slate-600 max-w-2xl mx-auto font-medium">
                A straightforward, transparent process from first call to launch.
              </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
              
              {processSteps.map((step) => (
                <div class="relative">
                  <div class="text-6xl font-black text-slate-200 mb-4">{step.step}</div>
                  <h3 class="text-xl font-bold text-slate-900 mb-3">{step.title}</h3>
                  
                  <p class="text-slate-600 text-sm leading-relaxed mb-4 font-medium">{step.description}</p>
                  
                  <div class="text-xs text-primary font-bold uppercase tracking-wider">{step.duration}</div>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- Why Static Sites -->
        <section class="py-24">
          <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
              <div>
                <span class="text-primary font-bold tracking-widest uppercase text-sm mb-4 block">Why Static?</span>
                
                <h2 class="text-5xl font-black tracking-tighter text-slate-900 mb-8">
                  Better Than<br/>WordPress.
                </h2>
                
                <div class="space-y-6">
                  <div class="flex gap-4">
                    <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                      <Check className="h-6 w-6 text-green-600" />
                    </div>
                    <div>
                      <h3 class="font-bold text-slate-900 mb-1">10x Faster</h3>
                      <p class="text-slate-600 font-medium">Static sites load in under a second. No database queries, no plugin bloat.</p>
                    </div>
                  </div>
                  
                  <div class="flex gap-4">
                    <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                      <Check className="h-6 w-6 text-blue-600" />
                    </div>
                    <div>
                      <h3 class="font-bold text-slate-900 mb-1">Hack-Proof Security</h3>
                      <p class="text-slate-600 font-medium">No database means nothing to hack. No WordPress vulnerabilities to worry about.</p>
                    </div>
                  </div>
                  
                  <div class="flex gap-4">
                    <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
                      <Check className="h-6 w-6 text-purple-600" />
                    </div>
                    <div>
                      <h3 class="font-bold text-slate-900 mb-1">Zero Maintenance Headaches</h3>
                      <p class="text-slate-600 font-medium">No plugin updates breaking your site. No "Update WordPress" notifications. It just works.</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="glass-card p-10 rounded-[2.5rem]">
                 <div class="text-center mb-8">
                    <h3 class="text-2xl font-bold text-slate-900 mb-2">Still need a CMS?</h3>
                    <p class="text-slate-600 font-medium">I offer CMS options too. You get the ease of updates with the speed of static.</p>
                 </div>
                 
                 <div class="space-y-4">
                    <a href="/pricing" class="block w-full py-4 px-6 bg-slate-900 text-white rounded-full text-center font-bold hover:bg-slate-800 transition-colors">
                      View All Options
                    </a>
                    
                    <a href="/contact" class="block w-full py-4 px-6 border-2 border-slate-200 text-slate-700 rounded-full text-center font-bold hover:border-slate-400 transition-colors">
                      Ask Me Anything
                    </a>
                 </div>
              </div>
            </div>
          </div>
        </section>

    </main>
    <Footer />
  </div>
</Layout>
