---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { CheckCircle, Zap, Shield, DollarSign } from 'lucide-react';
---

<Layout title="Our Services - Staticfish">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Header -->
          <div class="mx-auto max-w-3xl text-center mb-20">
            <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-6">
              Our Services
            </h1>
            <p class="text-xl text-muted-foreground leading-8">
              We specialize in creating high-performance static websites that are
              fast, secure, and built to scale with your business. Choose from our
              three carefully crafted packages designed for different business
              needs.
            </p>
          </div>

          <!-- Services Overview -->
          <div class="grid gap-16 lg:gap-24">
            <!-- Static Site Package -->
            <div class="relative">
              <Card className="overflow-hidden border-border bg-card">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-accent"></div>
                <CardHeader className="pb-8">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg">
                      <Zap className="h-8 w-8 text-primary" />
                    </div>
                    <div>
                      <CardTitle className="text-3xl font-bold">
                        Static Site
                      </CardTitle>
                      <CardDescription className="text-lg mt-2">
                        Perfect for small businesses just getting started online
                      </CardDescription>
                    </div>
                  </div>
                  <div class="flex items-baseline gap-2">
                    <span class="text-4xl font-bold text-primary">£149</span>
                    <span class="text-muted-foreground">one-off</span>
                    <span class="text-sm text-muted-foreground ml-4">
                      + £50/month hosting
                    </span>
                  </div>
                </CardHeader>
                <CardContent className="space-y-8">
                  <p class="text-muted-foreground leading-7">
                    Our Static Site package is ideal for small businesses,
                    freelancers, and entrepreneurs who need a professional online
                    presence without the complexity. Get a beautiful, fast website
                    that showcases your business and converts visitors into
                    customers.
                  </p>

                  <div>
                    <h3 class="text-xl font-semibold text-foreground mb-6">
                      What's Included
                    </h3>
                    <div class="grid sm:grid-cols-2 gap-4">
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Up to 4 pages
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Responsive design
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Contact form integration
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          CSP & SSL
                        </span>
                      </div>
                    </div>
                  </div>

                  <div class="pt-4">
                    <Button size="lg" className="w-full sm:w-auto">
                      <a href="/contact">Get Started with Static Site</a>
                    </Button>
                  </div>
                </CardContent>
              </Card>
            </div>

            <!-- CMS Site Package -->
            <div class="relative">
              <Card className="overflow-hidden border-primary/50 bg-card ring-1 ring-primary/20">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-accent"></div>
                <div class="absolute -top-3 left-8">
                  <span class="bg-primary text-primary-foreground text-sm font-medium px-4 py-1.5 rounded-full">
                    Most Popular
                  </span>
                </div>
                <CardHeader className="pb-8 pt-8">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg">
                      <Shield className="h-8 w-8 text-primary" />
                    </div>
                    <div>
                      <CardTitle className="text-3xl font-bold">
                        CMS Site
                      </CardTitle>
                      <CardDescription className="text-lg mt-2">
                        Ideal for small businesses that need a content management
                        system
                      </CardDescription>
                    </div>
                  </div>
                  <div class="flex items-baseline gap-2">
                    <span class="text-4xl font-bold text-primary">£249</span>
                    <span class="text-muted-foreground">one-off</span>
                    <span class="text-sm text-muted-foreground ml-4">
                      + £50/month hosting
                    </span>
                  </div>
                </CardHeader>
                <CardContent className="space-y-8">
                  <p class="text-muted-foreground leading-7">
                    The CMS Site package is perfect for established businesses
                    ready to scale their online presence. With advanced SEO,
                    content management capabilities, and enhanced analytics,
                    you'll have everything needed to grow your audience and drive
                    conversions.
                  </p>

                  <div>
                    <h3 class="text-xl font-semibold text-foreground mb-6">
                      What's Included
                    </h3>
                    <div class="grid sm:grid-cols-2 gap-4">
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Everything in Static Site
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Blog & CMS
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          2 Login Admin Users
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Manage content via Sanity CMS
                        </span>
                      </div>
                    </div>
                  </div>

                  <div class="pt-4">
                    <Button size="lg" className="w-full sm:w-auto">
                      <a href="/contact">Get Started with CMS Site</a>
                    </Button>
                  </div>
                </CardContent>
              </Card>
            </div>

            <!-- E Commerce Site Package -->
            <div class="relative">
              <Card className="overflow-hidden border-border bg-card">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-accent"></div>
                <CardHeader className="pb-8">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg">
                      <DollarSign className="h-8 w-8 text-primary" />
                    </div>
                    <div>
                      <CardTitle className="text-3xl font-bold">
                        E Commerce Site
                      </CardTitle>
                      <CardDescription className="text-lg mt-2">
                        For established businesses ready to take their store
                        online
                      </CardDescription>
                    </div>
                  </div>
                  <div class="flex items-baseline gap-2">
                    <span class="text-4xl font-bold text-primary">£399</span>
                    <span class="text-muted-foreground">one-off</span>
                    <span class="text-sm text-muted-foreground ml-4">
                      + £50/month hosting
                    </span>
                  </div>
                </CardHeader>
                <CardContent className="space-y-8">
                  <p class="text-muted-foreground leading-7">
                    Our E Commerce Site package is designed for businesses that
                    need enterprise-level features and custom integrations.
                    Perfect for e-commerce, complex business processes, and
                    organizations requiring specialized functionality with
                    priority support.
                  </p>

                  <div>
                    <h3 class="text-xl font-semibold text-foreground mb-6">
                      What's Included
                    </h3>
                    <div class="grid sm:grid-cols-2 gap-4">
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Everything in CMS Site (excluding CMS)
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          CMS (optional +£80)
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          E-commerce integration
                        </span>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="p-2 bg-primary/10 rounded-lg">
                          <CheckCircle className="h-4 w-4 text-primary" />
                        </div>
                        <span class="text-muted-foreground">
                          Multiple payment options
                        </span>
                      </div>
                    </div>
                  </div>

                  <div class="pt-4">
                    <Button size="lg" className="w-full sm:w-auto">
                      <a href="/contact">Get Started with E Commerce Site</a>
                    </Button>
                  </div>
                </CardContent>
              </Card>
            </div>
          </div>

          <!-- Call to Action -->
          <div class="mt-24 text-center">
            <h2 class="text-3xl font-bold text-foreground mb-4">
              Ready to Get Started?
            </h2>
            <p class="text-lg text-muted-foreground mb-8 max-w-2xl mx-auto">
              Not sure which package is right for you? Get in touch and we'll help
              you choose the perfect solution for your business needs.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <Button size="lg">
                <a href="/contact">Contact Us</a>
              </Button>
              <Button variant="outline" size="lg">
                <a href="/pricing">View Detailed Pricing</a>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>