---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Badge } from '../components/ui/badge';
import { Globe, LayoutTemplate, Wrench, Database, ArrowRight, Clock, Check } from 'lucide-react';

const services = [
  {
    id: "websites",
    title: "Static Websites",
    description: "Fast, secure websites perfect for small businesses that don't need frequent updates.",
    icon: Globe,
    price: "149",
    priceNote: "+ £50/mo hosting",
    features: [
      "Up to 5 pages included",
      "Custom design for your brand",
      "Mobile-first responsive design",
      "Contact form integration",
      "Basic SEO optimization",
      "Under 1 second load time"
    ],
    timeline: "1-2 weeks",
    tech: ["Astro", "React", "Tailwind CSS", "Cloudflare"],
    color: "ocean"
  },
  {
    id: "cms",
    title: "CMS Websites",
    description: "Easy-to-update websites for businesses that need to manage their own content.",
    icon: LayoutTemplate,
    price: "249",
    priceNote: "+ £50/mo hosting",
    features: [
      "No page limits",
      "Simple content editor",
      "Blog functionality",
      "2 admin users included",
      "Content scheduling",
      "Hosting & support included"
    ],
    timeline: "2-3 weeks",
    tech: ["Headless CMS", "Astro", "React", "Cloudflare"],
    color: "primary",
    featured: true
  },
  {
    id: "ecommerce",
    title: "E-Commerce Sites",
    description: "Sell products online with a fast, secure storefront that converts visitors into customers.",
    icon: Database,
    price: "399",
    priceNote: "+ £50/mo hosting",
    features: [
      "Everything in CMS sites",
      "PayPal & Stripe integration",
      "Unlimited products",
      "Order management dashboard",
      "Multicurrency support",
      "Abandoned cart recovery"
    ],
    timeline: "3-4 weeks",
    tech: ["Stripe", "PayPal", "React", "Database"],
    color: "coral"
  },
  {
    id: "custom",
    title: "Custom Development",
    description: "Browser extensions, automation tools, or complex web applications. Let's discuss your needs.",
    icon: Wrench,
    price: null,
    priceNote: "Custom Quote",
    features: [
      "Browser extensions",
      "Internal tools & dashboards",
      "API integrations",
      "Automation scripts",
      "AI-powered features",
      "Technical consultation"
    ],
    timeline: "Varies by project",
    tech: ["React", "Python", "Node.js", "PostgreSQL"],
    color: "ink"
  }
];

const processSteps = [
  {
    step: "01",
    title: "Discovery",
    description: "We discuss your business, goals, and requirements. I'll ask questions to understand exactly what you need.",
    duration: "30-60 min call"
  },
  {
    step: "02",
    title: "Proposal",
    description: "I send you a detailed proposal with scope, timeline, and fixed price. No hidden fees.",
    duration: "1-2 days"
  },
  {
    step: "03",
    title: "Design",
    description: "I create design mockups for your approval. We iterate until you're happy with the look.",
    duration: "3-5 days"
  },
  {
    step: "04",
    title: "Build",
    description: "I build your website with clean, modern code. You'll get progress updates throughout.",
    duration: "1-3 weeks"
  },
  {
    step: "05",
    title: "Launch",
    description: "Final testing, domain setup, and launch. I train you on how to update content (if applicable).",
    duration: "1-2 days"
  }
];
---

<Layout title="Services | Staticfish" description="Web development services for small businesses. Static sites, CMS websites, e-commerce, and custom development.">
  <div class="min-h-screen flex flex-col overflow-x-hidden">
    <Header />
    <main class="flex-1 pt-28">
        
        <!-- Background Elements -->
        <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
          <div class="blob-ocean w-[50vw] h-[50vw] top-[5%] right-[5%]"></div>
          <div class="blob-sand w-[40vw] h-[40vw] bottom-[30%] left-[0%]"></div>
        </div>

        <!-- Hero -->
        <section class="py-16 lg:py-24 relative">
          <div class="container mx-auto max-w-7xl px-6">
            <div class="max-w-3xl">
              <span class="badge-coral mb-6">Services</span>
              <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-ink font-display tracking-tighter mb-8">
                What I<br/>
                <span class="text-gradient-ocean">Build.</span>
              </h1>
              <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed">
                Four ways I can help your business succeed online. Each includes hosting, security, and my personal support.
              </p>
            </div>
          </div>
        </section>

        <!-- Services Grid -->
        <section class="py-16 lg:py-24">
          <div class="container mx-auto max-w-7xl px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
              
              {services.map((service) => (
                <div id={service.id} class={`card-elevated p-8 lg:p-10 relative group ${service.featured ? 'ring-2 ring-primary ring-offset-4 ring-offset-background' : ''}`}>
                    
                  {service.featured && (
                    <div class="absolute -top-3 right-6">
                      <span class="bg-primary text-white text-[10px] font-bold uppercase tracking-widest px-3 py-1 rounded-full shadow-lg shadow-primary/30">
                        Popular
                      </span>
                    </div>
                  )}
                  
                  <div class="flex items-start justify-between mb-6">
                    <div class={`w-14 h-14 rounded-2xl flex items-center justify-center text-white shadow-lg ${
                      service.color === 'ocean' ? 'bg-gradient-to-br from-ocean to-primary shadow-ocean/20' :
                      service.color === 'coral' ? 'bg-gradient-to-br from-coral to-accent shadow-coral/20' :
                      service.color === 'ink' ? 'bg-gradient-to-br from-ink to-slate-700 shadow-ink/20' :
                      'bg-gradient-to-br from-primary to-ocean shadow-primary/20'
                    }`}>
                      <service.icon className="h-7 w-7" />
                    </div>
                    
                    <div class="flex items-center gap-2 text-sm text-muted-foreground bg-secondary px-3 py-1.5 rounded-lg">
                      <Clock className="h-4 w-4" />
                      {service.timeline}
                    </div>
                  </div>

                  <h3 class="text-2xl font-bold text-ink font-display mb-2">{service.title}</h3>
                  
                  <div class="mb-4">
                    {service.price ? (
                      <div class="flex items-baseline gap-1">
                        <span class="text-sm text-muted-foreground">£</span>
                        <span class="text-4xl font-extrabold text-ink font-display tracking-tighter">{service.price}</span>
                      </div>
                    ) : (
                      <span class="text-2xl font-bold text-ink font-display">{service.priceNote}</span>
                    )}
                    {service.price && <span class="text-sm text-muted-foreground"> {service.priceNote}</span>}
                  </div>

                  <p class="text-muted-foreground mb-6 leading-relaxed">{service.description}</p>
                  
                  <ul class="space-y-2.5 mb-8">
                    {service.features.map(feature => (
                      <li class="flex items-start gap-3">
                        <div class={`w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 ${
                          service.color === 'ocean' ? 'bg-ocean/10 text-ocean' :
                          service.color === 'coral' ? 'bg-coral/10 text-coral' :
                          service.color === 'ink' ? 'bg-ink/10 text-ink' :
                          'bg-primary/10 text-primary'
                        }`}>
                          <Check className="h-3 w-3" strokeWidth={3} />
                        </div>
                        <span class="text-foreground text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>

                  <div class="flex flex-wrap gap-2 mb-8">
                    {service.tech.map(t => (
                      <span class="text-[10px] py-1 px-3 rounded-full uppercase tracking-wider bg-secondary text-muted-foreground font-semibold">
                        {t}
                      </span>
                    ))}
                  </div>

                  <Button className={`rounded-xl font-semibold ${
                    service.featured ? 'bg-primary hover:bg-primary/90' : 'bg-ink hover:bg-ink/90'
                  }`}>
                    <a href="/contact" class="flex items-center gap-2">
                      Get Started <ArrowRight className="h-4 w-4" />
                    </a>
                  </Button>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- Process Section -->
        <section class="py-24 bg-secondary/30 relative overflow-hidden">
          <div class="absolute inset-0 bg-[linear-gradient(to_right,hsl(var(--border))_1px,transparent_1px),linear-gradient(to_bottom,hsl(var(--border))_1px,transparent_1px)] bg-[size:60px_60px] opacity-50"></div>
          
          <div class="container relative z-10 mx-auto max-w-7xl px-6">
            
            <div class="text-center mb-16">
              <span class="badge-ocean mb-4">How It Works</span>
              <h2 class="text-4xl sm:text-5xl font-bold text-ink font-display tracking-tighter">My Process.</h2>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-8">
              {processSteps.map((step, index) => (
                <div class="relative">
                  <div class="text-6xl font-extrabold text-border font-display mb-4">{step.step}</div>
                  <h3 class="text-xl font-bold text-ink font-display mb-3">{step.title}</h3>
                  <p class="text-muted-foreground text-sm leading-relaxed mb-4">{step.description}</p>
                  <div class={`text-xs font-bold uppercase tracking-wider ${
                    index % 2 === 0 ? 'text-primary' : 'text-coral'
                  }`}>{step.duration}</div>
                </div>
              ))}
            </div>
          </div>
        </section>

          <!-- Why Static Sites -->
          <section class="py-24">
            <div class="container mx-auto max-w-7xl px-6">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div>
                  <span class="badge-ocean mb-6">Why This Approach?</span>
                  <h2 class="text-4xl sm:text-5xl font-bold text-ink font-display tracking-tighter mb-8">
                    Built for<br/>
                    <span class="text-gradient-warm">Simplicity.</span>
                  </h2>
                  
                  <div class="space-y-6">
                    <div class="flex gap-4">
                      <div class="w-12 h-12 rounded-xl bg-ocean/10 flex items-center justify-center flex-shrink-0">
                        <Check className="h-6 w-6 text-ocean" />
                      </div>
                      <div>
                        <h3 class="font-bold text-ink mb-1">Loads in Under a Second</h3>
                        <p class="text-muted-foreground">No database queries, no plugin bloat. Just fast, reliable pages.</p>
                      </div>
                    </div>
                    
                    <div class="flex gap-4">
                      <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0">
                        <Check className="h-6 w-6 text-primary" />
                      </div>
                      <div>
                        <h3 class="font-bold text-ink mb-1">Fewer Security Concerns</h3>
                        <p class="text-muted-foreground">No database means fewer attack vectors. Less to worry about.</p>
                      </div>
                    </div>
                    
                    <div class="flex gap-4">
                      <div class="w-12 h-12 rounded-xl bg-coral/10 flex items-center justify-center flex-shrink-0">
                        <Check className="h-6 w-6 text-coral" />
                      </div>
                      <div>
                        <h3 class="font-bold text-ink mb-1">Low Maintenance</h3>
                        <p class="text-muted-foreground">No constant plugin updates or security patches. It just works.</p>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="card-elevated p-8 lg:p-12">
                   <div class="text-center mb-8">
                      <h3 class="text-2xl font-bold text-ink font-display mb-2">Need to Update Content?</h3>
                      <p class="text-muted-foreground">I offer CMS options too. You get easy updates with the speed and reliability of a simple site.</p>
                   </div>
                   
                   <div class="space-y-4">
                      <Button className="w-full rounded-xl bg-ink hover:bg-ink/90 h-14">
                        <a href="/pricing">View All Options</a>
                      </Button>
                      <Button variant="outline" className="w-full rounded-xl h-14">
                        <a href="/contact">Ask Me Anything</a>
                      </Button>
                   </div>
                </div>
              </div>
            </div>
          </section>

    </main>
    <Footer />
  </div>
</Layout>
