---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { Mail, Phone, MapPin, Calendar } from 'lucide-react';
---

<Layout title="Contact Us - Staticfish">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Header -->
          <div class="mx-auto max-w-2xl text-center mb-16">
            <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl">
              Get In Touch
            </h1>
            <p class="mt-4 text-lg text-muted-foreground">
              Ready to start your project? We'd love to hear from you. Send us an
              email and we'll respond as soon as possible.
            </p>
          </div>

          <div class="mx-auto max-w-4xl">
            <div class="flex flex-col items-center">
              <Card className="w-full max-w-lg border-white/10 bg-white/5 backdrop-blur-md">
                <CardHeader>
                  <div class="flex items-center justify-center gap-3 mb-2">
                    <Mail className="h-6 w-6 text-primary" />
                    <CardTitle className="text-2xl font-black uppercase tracking-tighter">Email Us</CardTitle>
                  </div>
                </CardHeader>
                <CardContent className="text-center pb-12">
                  <a href="mailto:contact@staticfish.co.uk" class="text-3xl font-bold text-white hover:text-primary transition-colors tracking-tight">
                    contact@staticfish.co.uk
                  </a>
                  <p class="mt-6 text-muted-foreground italic font-medium">
                    We typically respond within 24 hours.
                  </p>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>