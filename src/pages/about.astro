---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import {
  Zap,
  Shield,
  DollarSign,
  Mail,
  type LucideIcon,
} from 'lucide-react';

// Type Definitions
interface Value {
  icon: LucideIcon;
  title: string;
  description: string;
}

interface TeamMember {
  name: string;
  role: string;
  bio: string;
  avatar: string;
  expertise: string[];
  social: {
    email: string;
  };
  gradient: string;
}

interface Stat {
  number: string;
  label: string;
}

interface Milestone {
  year: string;
  title: string;
  description: string;
}

const values: Value[] = [
  {
    icon: Zap,
    title: "Performance First",
    description:
      "We prioritize speed as a core feature. Every product we build is optimized for lightning-fast interactions that keep users engaged and conversion high.",
  },
  {
    icon: Shield,
    title: "Technical Integrity",
    description:
      "No shortcuts. We implement industry-best security practices and robust architecture to ensure your product is a reliable foundation for your business.",
  },
  {
    icon: DollarSign,
    title: "Fixed-Rate Transparency",
    description:
      "We operate on a transparent fixed-project model. No hidden hourly creep—just predictable investment for high-end technical results.",
  },
];

const teamMembers: TeamMember[] = [
  {
    name: "Michael Fisher",
    role: "Founder & Lead Engineer",
    bio: "Focused on building high-performance digital infrastructure and AI-integrated products. I founded Staticfish to help brands leverage modern engineering to scale efficiently.",
    avatar: "",
    expertise: ["Product Architecture", "AI Integration", "Performance Engineering"],
    social: {
      email: "hello@staticfish.com",
    },
    gradient: "from-blue-500/20 to-indigo-500/20",
  }
];

const stats: Stat[] = [
  { number: "100%", label: "Fixed Rate" },
  { number: "24h", label: "Response Time" },
  { number: "Live", label: "Production Apps" },
  { number: "Sub-1s", label: "Page Loads" },
];

const milestones: Milestone[] = [
  {
    year: "2024",
    title: "Staticfish Launch",
    description:
      "Established with a focus on high-performance architecture and custom SaaS solutions.",
  },
  {
    year: "2025",
    title: "Chattybox AI",
    description:
      "Launched a comprehensive RAG-powered AI platform, demonstrating our capabilities in AI integration and scalable infrastructure.",
  },
];
---

<Layout title="About Our Premium Digital Engineering Team | Staticfish" description="Learn about Staticfish, a technical partner for ambitious companies. We focus on high-performance architecture, product engineering, and scalable digital solutions.">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Header -->
          <div class="mx-auto max-w-3xl text-center mb-20">
            <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-6 uppercase tracking-tighter">
              About Staticfish
            </h1>
            <p class="text-xl text-muted-foreground leading-8 italic font-medium">
              We're on a mission to empower ambitious companies
              by providing them with high-performance technical engineering that 
              drives growth and redefines digital standards.
            </p>
          </div>

          <!-- Mission Section -->
          <section class="mb-24">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              <div>
                <h2 class="text-3xl font-bold text-foreground mb-6 uppercase tracking-tighter">
                  The Mission
                </h2>
                <div class="space-y-4 text-muted-foreground leading-7 italic font-medium">
                  <p>
                    Staticfish was founded to eliminate the friction between complex business ideas and high-performance digital reality. We believe that modern brands shouldn't be held back by technical limitations or generic templates.
                  </p>
                  <p>
                    Our focus is on precision engineering—building products that aren't just functional, but optimized for speed, security, and scalability from day one. By operating on a fixed-rate model, we provide the transparency and focus required to ship exceptional software without the typical agency bloat.
                  </p>
                  <p>
                    From specialized SaaS infrastructure to RAG-powered AI platforms like Chattybox, we build the technical foundations that allow ambitious companies to lead their industries.
                  </p>
                </div>
              </div>
              <div class="relative aspect-square bg-[#0a0a0a] border border-white/5 flex items-center justify-center overflow-hidden">
                <div class="absolute inset-0 bg-grid-white/5 opacity-20"></div>
                <Zap className="w-32 h-32 text-primary opacity-20" />
              </div>
            </div>
          </section>

          <!-- Our Values -->
          <section class="mb-24">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-foreground mb-4 uppercase tracking-tighter">
                Our Values
              </h2>
              <p class="text-lg text-muted-foreground max-w-2xl mx-auto italic">
                These core principles guide every technical decision we make for our partners.
              </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              {values.map((value) => (
                <div class="bg-background border border-white/5 p-10 hover:border-primary/50 transition-colors text-center">
                    <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-6">
                      <value.icon className="h-6 w-6 text-primary" />
                    </div>
                    <h3 class="text-xl font-bold text-white mb-4 uppercase tracking-tight">{value.title}</h3>
                    <p class="text-muted-foreground leading-6 italic text-sm">
                      {value.description}
                    </p>
                </div>
              ))}
            </div>
          </section>

          <!-- Stats -->
          <section class="mb-24">
            <div class="bg-gradient-to-br from-white/5 to-white/[0.02] border border-white/10 rounded-2xl p-12 md:p-20 relative overflow-hidden">
                <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_left,rgba(120,50,255,0.1),transparent_60%)]"></div>
                <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 relative z-10">
                  {stats.map((stat) => (
                    <div class="text-center">
                      <div class="text-4xl font-black mb-2 uppercase tracking-tighter text-white">
                        {stat.number}
                      </div>
                      <div class="text-xs font-bold uppercase tracking-widest text-muted-foreground">
                        {stat.label}
                      </div>
                    </div>
                  ))}
                </div>
            </div>
          </section>

          <!-- Our Team -->
          <section class="mb-24">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-foreground mb-4 uppercase tracking-tighter">
                Our Team
              </h2>
              <p class="text-lg text-muted-foreground max-w-2xl mx-auto italic">
                Meet the technical specialists behind Staticfish who are
                dedicated to your product's success.
              </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-1 max-w-2xl mx-auto gap-8">
              {teamMembers.map((member) => (
                <div class="bg-background border border-white/5 overflow-hidden p-8">
                  <div class="flex flex-col sm:flex-row gap-8 items-center">
                    <div class={`w-32 h-32 rounded-full overflow-hidden border-2 border-white/10`}>
                      <img
                        src={member.avatar}
                        alt={member.name}
                        class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
                      />
                    </div>
                    <div class="flex-1 text-center sm:text-left">
                      <div class="mb-4">
                        <h3 class="text-2xl font-bold text-white uppercase tracking-tighter">
                          {member.name}
                        </h3>
                        <p class="text-primary font-bold text-xs uppercase tracking-widest mt-1">{member.role}</p>
                      </div>
                      <p class="text-muted-foreground text-sm leading-relaxed mb-6 italic">
                        {member.bio}
                      </p>
                      <div class="flex flex-wrap gap-2 justify-center sm:justify-start mb-6">
                          {member.expertise.map((skill) => (
                            <span
                              class="text-[10px] bg-white/5 border border-white/10 text-white px-2 py-1 uppercase tracking-widest"
                            >
                              {skill}
                            </span>
                          ))}
                      </div>
                      <div class="flex gap-3 justify-center sm:justify-start">
                        <a href={`mailto:${member.social.email}`} class="text-white hover:text-primary transition-colors">
                          <Mail className="h-5 w-5" />
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>

          <!-- Timeline -->
          <section class="mb-24">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-foreground mb-4 uppercase tracking-tighter">
                Our Journey
              </h2>
              <p class="text-lg text-muted-foreground max-w-2xl mx-auto italic">
                From technical vision to live production.
              </p>
            </div>

            <div class="relative max-w-3xl mx-auto">
              <!-- Timeline line -->
              <div class="absolute left-8 top-0 bottom-0 w-px bg-white/10"></div>

              <div class="space-y-12">
                {milestones.map((milestone) => (
                  <div class="relative flex items-start gap-12 pl-4">
                    <div class="w-8 h-8 bg-black border border-white/20 rounded-full flex items-center justify-center relative z-10">
                      <div class="w-2 h-2 bg-primary rounded-full"></div>
                    </div>
                    <div class="flex-1 pt-0">
                      <div class="flex items-center gap-4 mb-3">
                        <span class="text-2xl font-black text-white tracking-tighter">
                          {milestone.year}
                        </span>
                        <h3 class="text-lg font-bold text-primary uppercase tracking-tight">
                          {milestone.title}
                        </h3>
                      </div>
                      <p class="text-muted-foreground leading-6 text-sm italic font-medium">
                        {milestone.description}
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </section>

          <!-- Call to Action -->
          <div class="text-center relative overflow-hidden py-24">
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(120,50,255,0.1),transparent_60%)]"></div>
            <div class="relative z-10">
              <h2 class="text-4xl font-bold text-foreground mb-4 leading-none uppercase tracking-tighter">
                Ready to Work Together?
              </h2>
              <p class="text-lg text-muted-foreground mb-12 max-w-2xl mx-auto italic font-medium">
                We'd love to learn about your technical needs and discuss how we can help
                you engineer a better digital future.
              </p>
              <div class="flex flex-col sm:flex-row gap-6 justify-center">
                <a href="/contact">
                  <Button size="lg" className="rounded-lg h-16 px-12 uppercase tracking-widest font-bold bg-white text-black hover:bg-white/90 shadow-[0_0_40px_-10px_rgba(255,255,255,0.3)] transition-all hover:scale-105">
                    Start Your Project
                  </Button>
                </a>
                <a href="/portfolio">
                  <Button variant="outline" size="lg" className="rounded-lg h-16 px-12 uppercase tracking-widest font-bold border-white/20 hover:border-white transition-all hover:scale-105">
                    View Our Work
                  </Button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>
