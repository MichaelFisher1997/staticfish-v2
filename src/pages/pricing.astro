---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { CheckCircle, X, Star } from 'lucide-react';
---

<Layout title="Pricing - Staticfish">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Header -->
          <div class="mx-auto max-w-3xl text-center mb-20">
            <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-6">
              Pricing Plans
            </h1>
            <p class="text-xl text-muted-foreground leading-8">
              Simple, transparent pricing that grows with your business. All plans
              include fast hosting, SSL certificates, and ongoing support.
            </p>
          </div>

          <!-- Pricing Tiers -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20">
            <!-- Starter -->
            <Card className="relative border-border">
              <CardHeader className="text-center pb-8">
                <CardTitle className="text-2xl font-bold">Static Site</CardTitle>
                <CardDescription className="text-base">
                  Perfect for small businesses just getting started online.
                </CardDescription>
                <div class="mt-6">
                  <div class="flex items-baseline justify-center gap-1">
                    <span class="text-4xl font-bold text-foreground">
                      £149
                    </span>
                    <span class="text-sm text-muted-foreground">one-off</span>
                  </div>
                  <div class="mt-2">
                    <span class="text-sm text-muted-foreground">
                      + £50/month hosting
                    </span>
                  </div>
                </div>
              </CardHeader>
              <CardContent className="space-y-6">
                <ul class="space-y-3">
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">Up to 4 pages</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">Responsive design</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">Contact form integration</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">CSP & SSL</span>
                  </li>
                </ul>
                <Button variant="outline" className="w-full">
                  <a href="/contact">Get Started</a>
                </Button>
              </CardContent>
            </Card>

            <!-- Growth -->
            <Card className="relative border-primary shadow-lg ring-1 ring-primary/20">
              <div class="absolute -top-3 left-1/2 -translate-x-1/2">
                <div class="flex items-center gap-1 bg-primary text-primary-foreground text-sm font-medium px-4 py-1.5 rounded-full">
                  <Star className="h-3 w-3" />
                  Most Popular
                </div>
              </div>
              <CardHeader className="text-center pb-8 pt-8">
                <CardTitle className="text-2xl font-bold">CMS Site</CardTitle>
                <CardDescription className="text-base">
                  Ideal for small businesses that need a content management
                  system.
                </CardDescription>
                <div class="mt-6">
                  <div class="flex items-baseline justify-center gap-1">
                    <span class="text-4xl font-bold text-foreground">
                      £249
                    </span>
                    <span class="text-sm text-muted-foreground">one-off</span>
                  </div>
                  <div class="mt-2">
                    <span class="text-sm text-muted-foreground">
                      + £50/month hosting
                    </span>
                  </div>
                </div>
              </CardHeader>
              <CardContent className="space-y-6">
                <ul class="space-y-3">
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">Everything in Static Site</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">No page limit</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">Blog & CMS</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">2 Login Admin Users</span>
                  </li>
                </ul>
                <Button className="w-full">
                  <a href="/contact">Get Started</a>
                </Button>
              </CardContent>
            </Card>

            <!-- Scale -->
            <Card className="relative border-border">
              <CardHeader className="text-center pb-8">
                <CardTitle className="text-2xl font-bold">
                  E Commerce Site
                </CardTitle>
                <CardDescription className="text-base">
                  For established businesses ready to take their store online.
                </CardDescription>
                <div class="mt-6">
                  <div class="flex items-baseline justify-center gap-1">
                    <span class="text-4xl font-bold text-foreground">
                      £399
                    </span>
                    <span class="text-sm text-muted-foreground">one-off</span>
                  </div>
                  <div class="mt-2">
                    <span class="text-sm text-muted-foreground">
                      + £50/month hosting
                    </span>
                  </div>
                </div>
              </CardHeader>
              <CardContent className="space-y-6">
                <ul class="space-y-3">
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">
                      Everything in CMS Site (excluding CMS)
                    </span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">CMS (optional +£80)</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">E-commerce integration</span>
                  </li>
                  <li class="flex items-center gap-3">
                    <CheckCircle className="h-4 w-4 text-green-500" />
                    <span class="text-sm">Multiple payment options</span>
                  </li>
                </ul>
                <Button variant="outline" className="w-full">
                  <a href="/contact">Get Started</a>
                </Button>
              </CardContent>
            </Card>
          </div>

          <!-- Call to Action -->
          <div class="mt-24 text-center">
            <h2 class="text-3xl font-bold text-foreground mb-4">
              Still have questions?
            </h2>
            <p class="text-lg text-muted-foreground mb-8 max-w-2xl mx-auto">
              Our team is here to help you choose the right package and answer any
              questions about our services.
            </p>
            <Button size="lg">
              <a href="/contact">Contact Us Today</a>
            </Button>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>