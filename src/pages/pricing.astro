---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { CheckCircle, X, Star, Check, Minus } from 'lucide-react';
import services from '../data/services.json';
import features from '../data/features.json';

const maintenancePlans = [
  {
    title: "Basic",
    price: "£50",
    period: "/month",
    description: "Essential security and upkeep.",
    features: ["Monthly Backups", "Security Updates", "Uptime Monitoring", "Email Support"]
  },
  {
    title: "Growth",
    price: "£150",
    period: "/month",
    description: "Regular updates and small changes.",
    features: ["Weekly Backups", "2 hrs dev time/mo", "Content Updates", "Priority Email Support"]
  },
  {
    title: "Full Partner",
    price: "£450",
    period: "/month",
    description: "Complete peace of mind and priority access.",
    features: ["Daily Backups", "5 hrs dev time/mo", "Performance Audits", "Phone & Slack Support"]
  }
];

---

<Layout title="Pricing - Staticfish">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Header -->
          <div class="mx-auto max-w-3xl text-center mb-20">
            <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-6">
              Pricing Plans
            </h1>
            <p class="text-xl text-muted-foreground leading-8">
              Simple, transparent pricing that grows with your business. All plans
              include fast hosting, SSL certificates, and ongoing support.
            </p>
          </div>

          <!-- Pricing Tiers -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20">
            {services.map(service => (
              <Card className={`relative border-border ${service.popular ? 'border-primary shadow-lg ring-1 ring-primary/20' : ''}`}>
                {service.popular && (
                  <div class="absolute -top-3 left-1/2 -translate-x-1/2">
                    <div class="flex items-center gap-1 bg-primary text-primary-foreground text-sm font-medium px-4 py-1.5 rounded-full">
                      <Star className="h-3 w-3" />
                      Most Popular
                    </div>
                  </div>
                )}
                <CardHeader className={`text-center pb-8 ${service.popular ? 'pt-8' : ''}`}>
                  <CardTitle className="text-2xl font-bold">{service.title}</CardTitle>
                  <CardDescription className="text-base">
                    {service.description}
                  </CardDescription>
                  <div class="mt-6">
                    <div class="flex items-baseline justify-center gap-1">
                      <span class="text-4xl font-bold text-foreground">
                        {service.price}
                      </span>
                      <span class="text-sm text-muted-foreground">{service.price_suffix}</span>
                    </div>
                    <div class="mt-2">
                      <span class="text-sm text-muted-foreground">
                        {service.hosting_fee}
                      </span>
                    </div>
                  </div>
                </CardHeader>
                <CardContent className="space-y-6">
                  <ul class="space-y-3">
                    {service.features.map(feature => (
                      <li class="flex items-center gap-3">
                        <CheckCircle className="h-4 w-4 text-green-500" />
                        <span class="text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                  <Button variant={service.popular ? 'default' : 'outline'} className="w-full">
                    <a href="/contact">Get Started</a>
                  </Button>
                </CardContent>
              </Card>
            ))}
          </div>

          <!-- Call to Action -->
          <!-- Feature Comparison Table -->
          <section class="mt-24">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-foreground mb-4">
                Compare Our Plans
              </h2>
              <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Find the perfect plan for your business by comparing features side-by-side.
              </p>
            </div>

            <div class="overflow-x-auto">
              <table class="w-full min-w-[640px] text-sm text-left">
                <thead class="border-b border-border">
                  <tr>
                    <th class="p-4 font-semibold text-foreground w-1/3">Features</th>
                    {services.map(service => (
                      <th class="p-4 font-semibold text-foreground text-center w-1/4">{service.title}</th>
                    ))}
                  </tr>
                </thead>
                <tbody>
                  {features.map((category) => (
                    <>
                      <tr class="border-b border-border">
                        <td colspan="4" class="p-4 font-semibold text-foreground bg-muted/30">
                          {category.category}
                        </td>
                      </tr>
                                            {category.features.map((feature: { name: string; static: boolean | string; cms: boolean | string; ecom: boolean | string; }) => (
                        <tr class="border-b border-border">
                          <td class="p-4 text-muted-foreground">{feature.name}</td>
                          {services.map((service) => {
                            const value = feature[service.id as keyof typeof feature];
                            return (
                              <td class="p-4 text-center text-muted-foreground">
                                {typeof value === 'boolean' ? (
                                  value ? <Check className="h-5 w-5 text-green-500 mx-auto" /> : <Minus className="h-5 w-5 text-muted-foreground/50 mx-auto" />
                                ) : (
                                  <span>{value}</span>
                                )}
                              </td>
                            )
                          })}
                        </tr>
                      ))}
                    </>
                  ))}
                </tbody>
              </table>
            </div>
          </section>

          <!-- Custom SaaS -->
          <section class="mt-24">
             <Card className="bg-gradient-to-r from-slate-900 to-slate-800 border-none text-white">
                <CardContent className="p-12 flex flex-col lg:flex-row items-center justify-between gap-8">
                   <div>
                      <h2 class="text-3xl font-bold mb-4">Need a Custom SaaS Solution?</h2>
                      <p class="text-lg text-gray-300 max-w-2xl">
                         Building a complex web application, internal tool, or subscription platform? 
                         We offer custom engineering with a transparent hourly rate or fixed-project quote.
                      </p>
                   </div>
                   <Button size="lg" variant="secondary" className="min-w-[200px]">
                      <a href="/contact">Get a Custom Quote</a>
                   </Button>
                </CardContent>
             </Card>
          </section>

          <!-- Maintenance Plans -->
          <section class="mt-24">
             <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-foreground mb-4">Maintenance & Support</h2>
                <p class="text-lg text-muted-foreground">Optional retainer plans to keep your site secure and fresh.</p>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {maintenancePlans.map(plan => (
                   <Card className="border-border bg-card">
                      <CardHeader>
                         <CardTitle>{plan.title}</CardTitle>
                         <div class="flex items-baseline gap-1 mt-2">
                            <span class="text-3xl font-bold">{plan.price}</span>
                            <span class="text-muted-foreground">{plan.period}</span>
                         </div>
                         <CardDescription>{plan.description}</CardDescription>
                      </CardHeader>
                      <CardContent>
                         <ul class="space-y-3">
                            {plan.features.map(feature => (
                               <li class="flex items-center gap-2 text-sm text-muted-foreground">
                                  <Check className="h-4 w-4 text-primary" />
                                  {feature}
                               </li>
                            ))}
                         </ul>
                      </CardContent>
                   </Card>
                ))}
             </div>
          </section>

          <!-- Call to Action -->
          <div class="mt-24 text-center">
            <h2 class="text-3xl font-bold text-foreground mb-4">
              Still have questions?
            </h2>
            <p class="text-lg text-muted-foreground mb-8 max-w-2xl mx-auto">
              Our team is here to help you choose the right package and answer any
              questions about our services.
            </p>
            <Button size="lg">
              <a href="/contact">Contact Us Today</a>
            </Button>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>