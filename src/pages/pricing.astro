---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Check } from 'lucide-react';
import services from '../data/services.json';

const maintenancePlans = [
  {
    title: "Basic",
    price: "£50",
    period: "/month",
    description: "Essential security and upkeep.",
    features: ["Monthly Backups", "Security Updates", "Uptime Monitoring", "Email Support"]
  },
  {
    title: "Growth",
    price: "£150",
    period: "/month",
    description: "Regular updates and small changes.",
    features: ["Weekly Backups", "2 hrs dev time/mo", "Content Updates", "Priority Email Support"]
  },
  {
    title: "Full Partner",
    price: "£450",
    period: "/month",
    description: "Complete peace of mind and priority access.",
    features: ["Daily Backups", "5 hrs dev time/mo", "Performance Audits", "Phone & Slack Support"]
  }
];

---

<Layout title="Transparent Fixed-Rate Pricing for SaaS & Web Engineering | Staticfish" description="Invest in technical excellence with our transparent, fixed-project pricing for SaaS development, high-end websites, and long-term technical partnerships.">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <section class="py-32 bg-background">
          <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <span class="text-primary text-xs font-bold tracking-[0.3em] uppercase mb-6 block">Pricing</span>
            <h1 class="text-6xl font-black tracking-tighter text-foreground sm:text-8xl md:text-9xl mb-12 leading-none uppercase">
              Invest in<br/>quality.
            </h1>
            <h2 class="text-2xl text-muted-foreground max-w-2xl leading-relaxed font-medium italic">
              Simple, transparent pricing for high-end digital products. No hidden fees, just pure technical excellence.
            </h2>
          </div>
        </section>

        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24">
          <!-- Pricing Tiers -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-px bg-white/10 border border-white/10 overflow-hidden mb-32">
            {services.map(service => (
              <div class={`relative bg-background p-12 hover:bg-white/[0.02] transition-colors ${service.popular ? 'z-10 ring-1 ring-primary' : ''}`}>
                {service.popular && (
                  <div class="absolute top-0 right-0 p-4">
                    <span class="text-[10px] font-black uppercase tracking-widest bg-primary text-white px-3 py-1">Popular Choice</span>
                  </div>
                )}
                <div class="mb-10">
                  <h3 class="text-3xl font-bold text-white mb-2 tracking-tighter uppercase">{service.title}</h3>
                  <p class="text-muted-foreground text-sm h-12">
                    {service.description}
                  </p>
                </div>
                
                <div class="mb-12">
                  <div class="flex items-baseline gap-2">
                    <span class="text-5xl font-black text-white tracking-tighter">
                      {service.price}
                    </span>
                    <span class="text-xs text-muted-foreground uppercase tracking-widest font-bold">{service.price_suffix}</span>
                  </div>
                </div>

                <div class="space-y-8">
                  <ul class="space-y-4">
                    {service.features.map(feature => (
                      <li class="flex items-start gap-3">
                        <Check className="h-4 w-4 text-primary shrink-0 mt-0.5" />
                        <span class="text-sm text-gray-400 font-medium">{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>

          <!-- Custom SaaS -->
          <section class="mb-32">
             <div class="bg-white/[0.02] border border-white/10 p-16 md:p-24 flex flex-col lg:flex-row items-center justify-between gap-12 relative overflow-hidden">
                <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:40px_40px]"></div>
                <div class="max-w-2xl text-center lg:text-left relative z-10">
                   <h2 class="text-4xl md:text-6xl font-black tracking-tighter uppercase mb-8 text-white">Custom SaaS Engineering.</h2>
                   <p class="text-xl font-medium text-muted-foreground leading-relaxed">
                      Building a complex web application, internal tool, or subscription platform? 
                      We offer custom engineering with transparent, fixed-project quotes.
                   </p>
                </div>
                <Button size="lg" className="bg-white text-black hover:bg-white/90 h-20 px-12 text-base font-black uppercase tracking-widest rounded-none min-w-[280px] relative z-10">
                   <a href="/contact">Consultation</a>
                </Button>
             </div>
          </section>

          <!-- Maintenance Plans -->
          <section class="mb-32">
             <div class="mb-20">
                <span class="text-primary text-xs font-bold tracking-[0.3em] uppercase mb-4 block">Aftercare</span>
                <h2 class="text-4xl font-black tracking-tighter sm:text-6xl uppercase">Maintenance Plans.</h2>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {maintenancePlans.map(plan => (
                   <div class="bg-background border border-white/5 p-10 hover:border-primary/50 transition-colors">
                      <h3 class="text-2xl font-bold text-white mb-6 tracking-tighter uppercase">{plan.title}</h3>
                      <div class="flex items-baseline gap-2 mb-8">
                         <span class="text-4xl font-black text-white">{plan.price}</span>
                         <span class="text-xs text-muted-foreground uppercase tracking-widest font-bold">{plan.period}</span>
                      </div>
                      <p class="text-sm text-muted-foreground mb-10 h-10">{plan.description}</p>
                      <ul class="space-y-4 pt-10 border-t border-white/5">
                         {plan.features.map(feature => (
                            <li class="flex items-center gap-3 text-sm text-gray-400 font-medium">
                               <div class="h-1 w-1 rounded-full bg-primary"></div>
                               {feature}
                            </li>
                         ))}
                      </ul>
                   </div>
                ))}
             </div>
          </section>

          <!-- Call to Action -->
          <div class="text-center py-20 border-t border-white/5 relative overflow-hidden">
            <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:40px_40px]"></div>
            <div class="relative z-10">
              <h2 class="text-4xl font-black uppercase tracking-tighter mb-8 text-white">
                Still have questions?
              </h2>
              <p class="text-lg text-muted-foreground mb-12 max-w-2xl mx-auto italic font-medium">
                Our team is here to help you choose the right package and answer any technical questions.
              </p>
              <Button size="lg" variant="outline" className="rounded-none border-white/20 hover:border-white h-16 px-12 uppercase tracking-widest font-bold">
                <a href="/contact">Contact Us</a>
              </Button>
            </div>
          </div>
        </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>
