---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';

const projects = [
  {
    title: "Chattybox AI",
    description: "A comprehensive RAG-powered intelligence layer that transforms static documentation into interactive, conversational interfaces. We engineered the end-to-end infrastructure, focusing on low-latency data ingestion, precise vector search, and a seamless, high-conversion user experience.",
    image: "/portfolio-chattybox.png",
    category: "AI & SaaS",
    package: "Custom SaaS",
    impact: "Live Production",
    url: "https://chattybox.ai/",
    features: ["Real-time AI", "Auth Systems", "Scalable Infrastructure", "Precision UI"],
    gradient: "from-blue-500/20 to-violet-500/20",
  }
];
---

<Layout title="Case Studies: High-Impact SaaS & Digital Products | Staticfish" description="Browse our portfolio of high-performance digital interventions, including RAG-powered AI platforms and scalable custom software solutions engineered for growth.">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <div class="min-h-screen bg-background py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <section class="py-32 bg-background border-b border-white/5">
          <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <span class="text-primary text-xs font-bold tracking-[0.3em] uppercase mb-6 block">Our Portfolio</span>
            <h1 class="text-6xl font-black tracking-tighter text-foreground sm:text-8xl md:text-9xl mb-12 leading-none uppercase">
              Proved<br/>Results.
            </h1>
            <h2 class="text-2xl text-muted-foreground max-w-2xl leading-relaxed font-medium italic">
              A gallery of our most impactful digital interventions. We don't just build sites; we engineer growth engines.
            </h2>
          </div>
        </section>

        <!-- Project Grid -->
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-32">
          <div class="grid grid-cols-1 md:grid-cols-1 gap-px bg-white/10 border border-white/10 overflow-hidden">
            {projects.map((project) => (
              <div class="group relative bg-background p-12 hover:bg-white/[0.02] transition-colors border-white/10 max-w-5xl mx-auto w-full">
                <div class="relative z-10 h-full flex flex-col">
                  <div class="aspect-[16/10] overflow-hidden bg-[#111] mb-10 group-hover:bg-[#1a1a1a] transition-all duration-500">
                    <img
                      src={project.image}
                      alt={project.title}
                      class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100"
                    />
                  </div>
                  
                  <div class="flex justify-between items-start mb-6">
                    <div>
                      <span class="text-xs font-mono text-primary mb-3 block">{project.category} //</span>
                      <h3 class="text-4xl font-bold text-white tracking-tighter uppercase group-hover:text-primary transition-colors">
                        <a href={project.url} target="_blank" rel="noopener noreferrer">
                          {project.title}
                        </a>
                      </h3>
                    </div>
                  </div>

                  <p class="text-gray-400 mb-10 leading-relaxed text-lg">
                    {project.description}
                  </p>

                  <!-- Stats -->
                  <div class="grid grid-cols-2 gap-8 pt-8 border-t border-white/10 mt-auto">
                    <div>
                      <div class="text-[10px] uppercase tracking-widest text-muted-foreground mb-2">Impact</div>
                      <div class="text-lg font-bold text-white uppercase tracking-tight">{project.impact}</div>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Call to Action -->
        <section class="py-48 bg-white text-black text-center">
          <div class="container mx-auto max-w-5xl px-4">
            <h2 class="text-6xl md:text-8xl font-black uppercase tracking-tighter mb-12">
              Ready to win?
            </h2>
            <p class="text-xl md:text-2xl font-medium mb-16 max-w-2xl mx-auto opacity-70 italic">
              Join our list of successful partners and build something that truly stands out.
            </p>
            <div class="flex flex-col sm:flex-row gap-6 justify-center">
              <Button size="lg" className="bg-black text-white hover:bg-black/90 font-black uppercase tracking-widest h-16 px-12 rounded-none">
                <a href="/contact">Start Project</a>
              </Button>
              <Button variant="outline" size="lg" className="border-black text-black hover:bg-black hover:text-white font-black uppercase tracking-widest h-16 px-12 rounded-none transition-colors">
                <a href="/pricing">View Packages</a>
              </Button>
            </div>
          </div>
        </section>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>
