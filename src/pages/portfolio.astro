---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Badge } from '../components/ui/badge';
import { ExternalLink, ArrowRight } from 'lucide-react';

const projects = [
  {
    title: "Chattybox AI",
    description: "A RAG-powered AI platform that transforms documentation into conversational interfaces. Built with React, Python, and vector databases. This demonstrates my ability to handle complex SaaS architecture and AI integration.",
    image: "/portfolio-chattybox.png",
    category: "AI SaaS",
    url: "https://chattybox.ai/",
    tags: ["React", "Python", "Vector DB", "AI Integration"],
  }
];
---

<Layout title="Portfolio | Staticfish" description="Recent work by Staticfish. Quality web development projects for small businesses.">
  <div class="min-h-screen flex flex-col overflow-x-hidden">
    <Header />
    <main class="flex-1 pt-32">
      
      <!-- Hero -->
      <section class="py-24 relative">
         <div class="absolute top-0 left-0 w-[50vw] h-[50vw] bg-purple-200/30 rounded-full blur-[120px] -z-10"></div>
         <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
            
            <span class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary text-xs font-bold tracking-widest uppercase mb-6">My Work</span>
            <h1 class="text-6xl font-black tracking-tighter text-slate-900 sm:text-8xl mb-8 leading-none">
              Recent<br/>Projects.
            </h1>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed font-medium">
              A selection of projects I've worked on. This list will grow as I complete more work for clients.
            </p>
         </div>
      </section>

      <!-- Project Grid -->
      <section class="py-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
           
          <div class="grid grid-cols-1 gap-16">
              {projects.map((item) => (
                <div class="glass-card rounded-[2.5rem] p-4 hover:p-0 transition-all duration-500 overflow-hidden bg-white">
                  <div class="aspect-[16/9] overflow-hidden rounded-2xl group-hover:rounded-none relative mb-0 group-hover:mb-0 transition-all duration-500">
                    <img 
                      src={item.image} 
                      alt={item.title} 
                      class="w-full h-full object-cover transition-all duration-700 group-hover:scale-105"
                    />
                    
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-500"></div>
                    
                    <!-- Hover Overlay Info -->
                    <div class="absolute bottom-0 left-0 w-full p-8 translate-y-full group-hover:translate-y-0 transition-transform duration-500 bg-gradient-to-t from-black/80 to-transparent">
                        <h3 class="text-3xl font-bold text-white mb-2 tracking-tight">
                           {item.title}
                        </h3>
                        <p class="text-sm font-mono uppercase tracking-[0.2em] text-white/80">{item.category}</p>
                    </div>
                  </div>
                  
                  <div class="p-8 md:p-12">
                     <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                        <div>
                          <Badge variant="outline" className="rounded-full border-primary/20 bg-primary/5 text-primary uppercase tracking-widest text-[10px] py-1 px-3 mb-4">
                             {item.category}
                          </Badge>
                          
                          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 tracking-tight">{item.title}</h2>
                        </div>
                        
                        <Button size="lg" className="rounded-full px-8 h-12 font-bold shadow-lg shadow-primary/20 hover:shadow-primary/40 transition-all">
                          <a href={item.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2">
                            View Live Site <ExternalLink className="h-4 w-4" />
                          </a>
                        </Button>
                     </div>
                     
                     <p class="text-lg text-slate-600 leading-relaxed mb-8 font-medium max-w-3xl">
                        {item.description}
                     </p>
                     
                     <div class="flex flex-wrap gap-2">
                        {item.tags.map(tag => (
                           <span class="text-xs font-mono text-slate-500 bg-slate-100 px-3 py-1 rounded-full">{tag}</span>
                        ))}
                     </div>
                  </div>
                </div>
              ))}
           </div>
           
           <!-- More Coming -->
           <div class="mt-24 text-center">
              <div class="glass-card rounded-[2rem] p-12 max-w-2xl mx-auto">
                 <h3 class="text-2xl font-bold text-slate-900 mb-4">More Projects Coming Soon</h3>
                 <p class="text-slate-600 font-medium mb-8">
                    I'm currently working with several small businesses on their websites. Check back soon to see their projects here.
                 </p>
                 <Button variant="outline" className="rounded-full border-slate-300 text-slate-700 hover:bg-slate-50">
                    <a href="/contact">Start Your Project</a>
                 </Button>
              </div>
           </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="py-32 relative overflow-hidden">
         <div class="container mx-auto max-w-5xl text-center px-4 relative z-10">
            <h2 class="text-5xl md:text-6xl font-black tracking-tighter mb-8 text-slate-900">
              Want to see your project here?
            </h2>
            <p class="text-xl md:text-2xl font-medium mb-12 max-w-2xl mx-auto text-slate-600">
              I'd love to work with you. Let's build something great together.
            </p>
            <Button size="lg" className="bg-slate-900 text-white hover:bg-slate-800 font-bold h-16 px-12 rounded-full shadow-xl hover:scale-105 transition-transform">
              <a href="/contact">Let's Talk</a>
            </Button>
         </div>
      </section>

    </main>
    <Footer />
  </div>
</Layout>
